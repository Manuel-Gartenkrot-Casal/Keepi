        </button>
    </div>
</div>

<button id="chat-fab" class="chat-fab" aria-label="Abrir chat">
    <span class="desktop-only">üí¨</span>
    <span class="mobile-only">üí¨</span>
</button>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Detectar si es un dispositivo t√°ctil
        const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0 || navigator.msMaxTouchPoints > 0;
        
        // A√±adir clase al body para estilos espec√≠ficos de touch
        if (isTouchDevice) {
            document.body.classList.add('touch-device');
        }

        // Mejorar la accesibilidad del men√∫
        document.addEventListener('DOMContentLoaded', function() {
            // Cerrar men√∫ al presionar Escape
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    menuLateral.classList.remove('active');
                    overlay.classList.remove('active');
                    if (panel) panel.classList.remove('active');
                }
            });

            // Mejorar la navegaci√≥n por teclado
            const focusableElements = 'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])';
            const modal = document.querySelector('.menu-lateral');
            
            if (modal) {
                const focusableContent = modal.querySelectorAll(focusableElements);
                const firstFocusableElement = focusableContent[0];
                const lastFocusableElement = focusableContent[focusableContent.length - 1];

                document.addEventListener('keydown', function(e) {
                    if (e.key === 'Tab') {
                        if (e.shiftKey && document.activeElement === firstFocusableElement) {
                            e.preventDefault();
                            lastFocusableElement.focus();
                        } else if (!e.shiftKey && document.activeElement === lastFocusableElement) {
                            e.preventDefault();
                            firstFocusableElement.focus();
                        }
                    }
                });

                firstFocusableElement.focus();
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>




