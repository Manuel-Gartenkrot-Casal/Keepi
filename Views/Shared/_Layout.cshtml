                </a>
            </div>
            <div class="grow1">
                @if (Context.Session.GetString("usuario") != null)
                {
                    <a class="notis" href="#" id="btnNotis">
                        <img src="~/imagenes/Notis.png" alt="Notificaciones">
                        <span class="notis-badge" id="notisBadge" style="display: none;">0</span>
