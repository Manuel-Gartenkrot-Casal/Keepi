        </section>
    </header>

    <!-- JavaScript mejorado para manejar menÃºs sin conflictos -->
    <script>
        console.log('[v0] Inicializando menÃºs y notificaciones');
        
        // Elementos del DOM
        const btnMenu = document.getElementById('btnMenu');
        const btnCerrarMenu = document.getElementById('btnCerrarMenu');
        const menuLateral = document.getElementById('menuLateral');
        
        const btnNotis = document.getElementById('btnNotis');
        const btnCerrarNotis = document.getElementById('btnCerrarNotis');
        const panelNotificaciones = document.getElementById('panelNotificaciones');
        
        const overlay = document.getElementById('overlay');

        // FunciÃ³n para cerrar todos los paneles
        function cerrarTodo() {
            menuLateral.classList.remove('active');
            panelNotificaciones.classList.remove('active');
            overlay.classList.remove('active');
            console.log('[v0] Todos los paneles cerrados');
        }

        // Abrir menÃº lateral
        if (btnMenu) {
            btnMenu.addEventListener('click', (e) => {
                e.preventDefault();
                console.log('[v0] Abriendo menÃº lateral');
                
                // Cerrar notificaciones si estÃ¡n abiertas
                panelNotificaciones.classList.remove('active');
                
                // Abrir menÃº
                menuLateral.classList.add('active');
                overlay.classList.add('active');
            });
        }

        // Cerrar menÃº lateral con botÃ³n X
        if (btnCerrarMenu) {
            btnCerrarMenu.addEventListener('click', () => {
                console.log('[v0] Cerrando menÃº lateral');
                cerrarTodo();
            });
        }

        // Abrir panel de notificaciones
        if (btnNotis) {
            btnNotis.addEventListener('click', (e) => {
                e.preventDefault();
                console.log('[v0] Abriendo panel de notificaciones');
                
                // Cerrar menÃº si estÃ¡ abierto
                menuLateral.classList.remove('active');
                
                // Abrir notificaciones
                panelNotificaciones.classList.add('active');
                overlay.classList.add('active');
                
                // Cargar notificaciones
                cargarNotificaciones();
            });
        }

        // Cerrar panel de notificaciones con botÃ³n X
        if (btnCerrarNotis) {
            btnCerrarNotis.addEventListener('click', () => {
                console.log('[v0] Cerrando panel de notificaciones');
                cerrarTodo();
            });
        }

        // Cerrar todo al hacer clic en overlay
        if (overlay) {
            overlay.addEventListener('click', () => {
                console.log('[v0] Click en overlay - cerrando todo');
                cerrarTodo();
            });
        }

        // Cerrar menÃº al hacer clic en un enlace
        const menuLinks = document.querySelectorAll('.menu-lateral nav a');
        menuLinks.forEach(link => {
            link.addEventListener('click', () => {
                console.log('[v0] Click en enlace del menÃº');
                cerrarTodo();
            });
        });

        function cargarNotificaciones() {
            // Por ahora mostrar "sin notificaciones" hasta que se implemente el backend
            const listaNotificaciones = document.getElementById('listaNotificaciones');
            const sinNotificaciones = document.querySelector('.sin-notificaciones');
            
            if (listaNotificaciones && sinNotificaciones) {
                listaNotificaciones.innerHTML = '';
                sinNotificaciones.style.display = 'block';
            }
            
            // TODO: Implementar llamada AJAX al backend cuando estÃ© listo
            // fetch('/Notificaciones/ObtenerNotificaciones')
            //     .then(response => response.json())
            //     .then(notificaciones => {
            //         if (notificaciones && notificaciones.length > 0) {
            //             sinNotificaciones.style.display = 'none';
            //             // Renderizar notificaciones
            //         }
            //     });
        }

        function actualizarBadgeNotificaciones(count) {
            const badge = document.getElementById('notisBadge');
            if (badge) {
                if (count > 0) {
                    badge.textContent = count;
                    badge.style.display = 'flex';
                } else {
                    badge.style.display = 'none';
                }
            }
        }

        // Inicializar badge en 0 (sin notificaciones)
        actualizarBadgeNotificaciones(0);
    </script>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
