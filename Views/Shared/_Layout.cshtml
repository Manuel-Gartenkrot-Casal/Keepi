    <!-- Panel de Notificaciones implementado -->
    <div class="notificaciones-panel" id="panelNotificaciones">
        <div class="notificaciones-header">
            <h3>Notificaciones</h3>
            <button class="btn-cerrar-notis" id="btnCerrarNotis">Ã—</button>
        </div>
        <div class="notificaciones-content">
            <ul id="listaNotificaciones">
                <!-- Las notificaciones se cargarÃ¡n aquÃ­ dinÃ¡micamente -->
            </ul>
            <div class="sin-notificaciones">
