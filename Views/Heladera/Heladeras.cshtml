            if (!nombreHeladera) {
                alert("Error: Nombre de heladera no especificado");
                return;
            }

            fetch("/Heladera/EliminarHeladera", {
                method: "POST",
                headers: { "Content-Type": "application/x-www-form-urlencoded" },
                body: `nombreHeladera=${encodeURIComponent(nombreHeladera)}`
            }).then(resp => resp.json())
              .then(data => {
                  if (data.success) {
                      location.reload();
