@{
    int contador = 0;
}

<style>
        body {
            font-family: sans-serif;
            background: #f9f9f9;
            text-align: center;
            margin: 0;
            padding: 3%;
        }

        .heladeras-container {
            display: flex;
            overflow-x: auto;
            scroll-behavior: smooth;
            align-items: center;
            gap: 1.5%;
            padding: 1%;
            margin-top: 4%;
            scroll-snap-type: x mandatory;
            scrollbar-width: none; /* Oculta barra en Firefox */
            width: 100%;
            box-sizing: border-box;
        }

        .heladeras-container::-webkit-scrollbar {
            display: none; /* Oculta barra en Chrome/Safari */
        }

        .heladera {
            flex: 0 0 15%;
            height: 400px; /*No se porque no funciona en porcentaje*/
            background: #c0c0c0;
            border-radius: 8px;
            position: relative;
            opacity: 0.5;
            transform: scale(0.9);
            transition: all 0.4s ease;
            scroll-snap-align: center;
            cursor: default;
        }

        .heladera.active {
            opacity: 1;
            transform: scale(1.05);
            z-index: 2;
            cursor: pointer;
        }

        .nota {
            position: absolute;
            top: 3%;
            right: 4%;
            background: white;
            border: 1px solid #ccc;
            padding: 6%;
            font-size: 15px; /*No se porque no funciona en porcentaje*/
            width: 25%;
            text-align: center;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            font-weight: bold;
        }

        .decoracion {
            position: absolute;
            width: 20px;
            height: 20px;
        }

        .decoracion.estrella { background: gold; clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%); }
        .decoracion.triangulo { background: green; clip-path: polygon(50% 0%, 0% 100%, 100% 100%); }
        .decoracion.cuadrado { background: blue; }
        .decoracion.circulo { background: red; border-radius: 50%; }

        .controles {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            margin-top: 20px;
            font-size: 20px;
        }

        .decoraciones-panel {
            text-align: center;
            margin-top: 30px;
        }

        #opcionesDecoracion.oculto {
            display: none;
        }

        .freezer {
            width: 100%;
            height: 40%;
            border-radius: 8px;
            background-color: rgb(105, 105, 105);
        }

        .heladeraAbajo {
            width: 100%;
            height: 60%;
            margin-top: 2%;
            border-radius: 8px;
            background-color: rgb(105, 105, 105);
        }

        .nota::before {
            content: "Lista de Compras _______ _______ _______";
        }

        @@media (max-width: 1366px) {
            .nota::before {
                content: "Lista de Compras _____ _____ _____";
            }
            .nota {
                font-size: 75%;
            }
        }

        @@media (max-width: 1024px) {
            .nota::before {
                content: "Lista de Compras _____ _____ _____";
            }
            .nota {
                font-size: 60%;
                margin-right: 2%;
            }
        }

        @@media (max-width: 800px) {
            .nota::before {
                content: "Lista de Compras ______ ______ ______";
            }
            .nota {
                font-size: 45%;
                margin-right: 2%;
            }
        }

        @@media (max-width: 750px) { /*Qued√≥ medio malo*/
            .nota::before {
                content: "Lista de Compras ______________ ______________ ______________";
            }
            .nota {
                font-size: 45%;
                margin-top: 1%;
            }

            .heladeras-container {
                flex-direction: column; 
                overflow-x: visible; 
                overflow-y: auto; 
                align-items: center; 
            }

            .heladera {
                flex: 0 0 auto; 
                height: 120px; 
                width: 350px; 
                margin: 2%;
            }
        }
</style>

<body>

    <h1>Heladeras Interactivas</h1>
    <p>Elige la heladera que quieras usar hoy</p>

    <div class="carousel-container">
            <div class="heladeras-container" id="heladerasContainer">
                @foreach (Heladera heladera in ViewBag.Heladeras)
                {
                    string color = heladera.Color;
                    string nombre = heladera.Nombre;
                    bool eliminado = heladera.Eliminado;

                    @if (eliminado = false) {
                        <div class="heladera" id="heladera-@contador">
                            <section class="freezer">
                            <div class="nota"></div>
                            </section>
                            <section class="heladeraAbajo"></section>
                        </div>
                        contador++;
                    }
                }
            </div>
        <div class="controles">
            <button id="prev">‚¨Ö</button>
            <span id="titulo">Heladera 1</span>
            <button id="next">‚û°</button>
        </div>
      </div>

    <div class="decoraciones-panel">
        <button id="modoDecoracion">üé® Agregar Decoraci√≥n</button>

        <div id="opcionesDecoracion" class="oculto">
            <p>Eleg√≠ una forma:</p>
            <button class="forma" data-tipo="estrella">‚≠ê</button>
            <button class="forma" data-tipo="triangulo">üî∫</button>
            <button class="forma" data-tipo="cuadrado">üü¶</button>
            <button class="forma" data-tipo="circulo">üî¥</button>
            <p>(Luego hac√© clic en la heladera)</p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const heladerasContainer = document.getElementById("heladerasContainer");
            const heladeras = document.querySelectorAll(".heladera");
            const titulo = document.getElementById("titulo");

            const totalHeladeras = heladeras.length;
            let indice;

            indice = Math.floor((totalHeladeras - 1) / 2);

            let modoDecoracion = false;
            let decoracionSeleccionada = null;

            function actualizar() {
                heladeras.forEach((h, i) => h.classList.toggle("active", i === indice));
                titulo.textContent = `Heladera ${indice + 1}`;
                heladeras[indice].scrollIntoView({behavior: 'smooth', inline: 'center'});
            }

            document.getElementById("prev").addEventListener("click", () => {
                indice = (indice - 1 + heladeras.length) % heladeras.length;
                actualizar();
            });

            document.getElementById("next").addEventListener("click", () => {
                indice = (indice + 1) % heladeras.length;
                actualizar();
            });

            document.getElementById("modoDecoracion").addEventListener("click", () => {
                modoDecoracion = !modoDecoracion;
                document.getElementById("opcionesDecoracion").classList.toggle("oculto", !modoDecoracion);
                decoracionSeleccionada = null;
            });

            document.querySelectorAll(".forma").forEach(btn => {
                btn.addEventListener("click", () => {
                    decoracionSeleccionada = btn.dataset.tipo;
                });
            });

            heladeras.forEach(heladera => {
                heladera.addEventListener("click", e => {
                    if (!modoDecoracion || !heladera.classList.contains("active") || !decoracionSeleccionada) return;

                    const rect = heladera.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;

                    const deco = document.createElement("div");
                    deco.classList.add("decoracion", decoracionSeleccionada);
                    deco.style.left = `${x - 10}px`;
                    deco.style.top = `${y - 10}px`;

                    heladera.appendChild(deco);
                });
            });
            ajustarHeladerasPorNumero();
            // Centrar la heladera inicial al cargar
            setTimeout(() => {
                actualizar();
            }, 50);

            function ajustarHeladerasPorNumero() { //centra las heladeras cuando es necesario para que no se vea feo
                const container = heladerasContainer;
                if (heladeras.length > 5) {
                    container.style.justifyContent = "flex-start"; 
                    container.style.overflowX = "auto";            
                } else {
                    container.style.justifyContent = "center";     
                    container.style.overflowX = "hidden";
                }
            }
        });
    </script>
</body>
</html>

