            background: #fff;
            padding: 18px;
            border-radius: 8px;
            max-width: 420px;
            width: 90%;
            box-shadow: 0 8px 24px rgba(0,0,0,0.2);
        }

        /* cuando tienen la clase oculto se esconden */
        .popup-crear.oculto,
        .popup-editar.oculto {
            display: none !important;
        }

        :root{
            --btn-radius:12px;
            --shadow-1: 0 6px 18px rgba(12,20,30,0.08);
            --shadow-2: 0 12px 30px rgba(12,20,30,0.12);
            --transition: 180ms cubic-bezier(.2,.9,.3,1);
        }

        /* responsive tweaks */
        @@media (max-width:520px){
            .btn { min-width: 110px; padding:10px 12px; }
            .heladera-card { flex: 0 0 220px; }
            .heladera-card .heladera { height: 320px; }
            .paginaHeladeras { padding: 4%; }
        }

        /* Decoraciones y boton de crear*/

        .panel-actions {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
            margin-top: 18px;
        }

        .panel-actions .panel-btn {
            min-width: 220px;
            padding: 10px 16px;
            border-radius: 12px;
            font-weight: 700;
            cursor: pointer;
            border: 0;
            box-shadow: 0 10px 24px rgba(8,12,20,0.08);
            transition: transform .16s ease, box-shadow .16s ease;
            color: #fff;
