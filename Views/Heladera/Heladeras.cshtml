@{
    int contador = 0;
}

<style>
        .paginaHeladeras {
            font-family: sans-serif;
            background: #f9f9f9;
            text-align: center;
            margin: 0;
            padding: 3%;
            box-sizing: border-box;

            display: flex;
            flex-direction: column;
            min-height: calc(100vh - 160px); /* ajustar 160px seg√∫n header+footer reales */
            padding-bottom: 0; /* el footer est√° fuera; evitamos espacio extra */

            /* evitar que elementos escalados ampl√≠en el ancho del documento */
            overflow-x: hidden;
        }

        .heladeraContenido {
            flex: 1 1 auto;
            display: flex;
            flex-direction: column;
        }

        .carousel-container {
            overflow: visible;
        }

        .heladeras-container {
            display: flex;
            flex-wrap: nowrap;
            overflow-x: auto;
            overflow-y: hidden;
            scroll-behavior: smooth;
            align-items: flex-start;
            gap: 1.5%;
            padding: 1%;
            scroll-snap-type: x mandatory;
            scrollbar-width: none; /* Oculta barra en Firefox */
            width: 100%;
            box-sizing: border-box;
            padding-bottom: 20px;
        }

        .heladeras-container::-webkit-scrollbar {
            display: none; /* Oculta barra en Chrome/Safari */
        }

        .heladera-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
            flex: 0 0 280px; /* ancho fijo por tarjeta (ajustar si quer√©s) */
            box-sizing: border-box;
        }

        .heladera-card .heladera {
            flex: 0 0 auto !important;
            width: 100%;
            height: 400px;
            /* color base desde la variable */
            background-color: var(--hel-color, #c0c0c0);
            /* capa uniforme que oscurece ligeramente el color base */
            background-image: linear-gradient(rgba(0,0,0,0.20), rgba(0,0,0,0.20));
            background-blend-mode: multiply;
            background-repeat: no-repeat;
            background-size: cover;
            border-radius: 8px;
            position: relative;
            opacity: 1;
            transform: scale(0.9);
            transition: all 0.4s ease;
            scroll-snap-align: center;
            cursor: default;
        }

        .heladera-info {
            text-align: center;
            width: 100%;
            margin-top: 7%;
            display: flex; 
            flex-direction: column; 
            align-items: center; 
            gap: 8px;
        }

        .heladera.active {
            opacity: 1;
            transform: scale(1.05);
            z-index: 2;
            cursor: pointer;
        }

        .nota {
            position: absolute;
            top: 2.5%;
            right: 4%;
            background: white;
            border: 1px solid #ccc;
            padding: 6%;
            font-size: 15px; /*No se porque no funciona en porcentaje*/
            width: 42%;
            text-align: center;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            font-weight: bold;
        }

        .decoracion {
            position: absolute;
            width: 20px;
            height: 20px;
        }

        .decoracion.estrella { background: gold; clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%); }
        .decoracion.triangulo { background: green; clip-path: polygon(50% 0%, 0% 100%, 100% 100%); }
        .decoracion.cuadrado { background: blue; }
        .decoracion.circulo { background: red; border-radius: 50%; }

        .controles {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            margin-top: 20px;
            font-size: 20px;
        }

        .decoraciones-panel {
            text-align: center;
            margin-top: 30px;
        }

        #opcionesDecoracion.oculto {
            display: none;
        }

        /* Freezer: m√°s oscuro (superior) */
        .freezer {
            width: 100%;
            height: 40%;
            border-radius: 8px 8px 4px 4px;
            background-color: var(--hel-color, rgb(105,105,105));
            /* freezer m√°s oscuro */
            background-image: linear-gradient(rgba(0,0,0,0.13), rgba(0,0,0,0.13));
            background-blend-mode: multiply;
            background-size: cover;
        }

        /* Parte inferior: un poco menos oscura para contraste */
        .heladeraAbajo {
            width: 100%;
            height: 60%;
            margin-top: 2%;
            border-radius: 4px 4px 8px 8px;
            background-color: var(--hel-color, rgb(105,105,105));
            /* parte inferior un poco menos oscura */
            background-image: linear-gradient(rgba(0,0,0,0.13), rgba(0,0,0,0.13));
            background-blend-mode: multiply;
            background-size: cover;
        }
        
        .heladera:hover,
        .freezer .heladeraAbajo {
            background-image: linear-gradient(rgba(0,0,0,0.17), rgba(0,0,0,0.17));
            background-blend-mode: multiply;
            background-size: cover;
            cursor: pointer;
        }

        .heladera:hover,
        .heladera {
            background-image: linear-gradient(rgba(0,0,0,0.25), rgba(0,0,0,0.25));
            background-blend-mode: multiply;
            background-size: cover;
            cursor: pointer;
        }

        /* overlay general (sobre todo el cuerpo) */
        .heladera::before {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 8px;
            background: linear-gradient(rgba(0,0,0,0.25), rgba(0,0,0,0.25));
            opacity: 0;
            transition: opacity .30s ease;
            pointer-events: none;
            z-index: 1;
        }

        .heladera.active {
            opacity: 1;
            transform: scale(1.05);
            z-index: 3;
            box-shadow: 0 12px 34px rgba(8,12,20,0.12);
        }

        .heladera-info .btn-row { 
            display: flex; 
            gap: 10px; 
            flex-wrap: wrap; 
            justify-content: center; 
        }

        .nombre-heladera {
            margin-bottom: 3%;
        }

        .btn {
            display:inline-flex;
            align-items:center;
            justify-content:center;
            gap:8px;
            padding:10px 16px;
            font-weight:600;
            font-size:14px;
            border-radius:var(--btn-radius);
            border:0;
            cursor:pointer;
            box-shadow:var(--shadow-1);
            transition: transform var(--transition), box-shadow var(--transition), filter var(--transition);
            min-width: 140px;
            color: #0b1220;
        }

        .btn:active{ transform: translateY(0); }
        .btn:focus{ outline: 3px solid rgba(50,115,220,0.12); outline-offset: 3px; }
        
        .btn--primary {
            background: linear-gradient(180deg,#56cc7b,#2aa04a);
            color: #04230a;
        }
        .btn--primary:hover{ transform: translateY(-3px); box-shadow:var(--shadow-2); }

        .btn--accent {
            background: linear-gradient(180deg,#7fb6ff,#2f6fd1);
            color:#041834;
        }
        .btn--accent:hover{ transform: translateY(-3px); box-shadow:var(--shadow-2); }

        .btn--danger {
            background: linear-gradient(180deg,#ff9b9b,#d93939);
            color:#230909;
        }
        .btn--danger:hover{ transform: translateY(-3px); box-shadow:var(--shadow-2); filter:brightness(.98); }

        /* small variant for popup actions */
        .btn--sm { padding:8px 12px; min-width: 80px; font-size:13px; border-radius:10px; }

        .btnCambiarNombre{
            background: linear-gradient(180deg,#6ee07a,#22a34a);
            color: #05220a;
            text-shadow: 0 1px 0 rgba(255,255,255,0.12);
            border: 1px solid rgba(0,0,0,0.08);
        }

        .btnCambiarNombre:hover { transform: translateY(-2px); box-shadow: 0 10px 20px rgba(34,163,74,0.12); filter:brightness(1.02); }
        .btnCambiarNombre:active { transform: translateY(0); }
        
        .btnCambiarColor {
            background: linear-gradient(180deg,#8fbffc,#3b73d1);
            color: #041b3a;
            border: 1px solid rgba(0,0,0,0.06);
        }

        .btnCambiarColor:hover { transform: translateY(-2px); box-shadow: 0 10px 20px rgba(59,115,209,0.12); filter:brightness(1.02); }
        .btnCambiarColor:active { transform: translateY(0); }


        .btnEliminarHeladera {
            background: linear-gradient(180deg,#ff9b9b,#e03b3b);
            color: #1b0b0b;
            border: 1px solid rgba(0,0,0,0.08);
        }
        .btnEliminarHeladera:hover { transform: translateY(-2px); box-shadow: 0 10px 20px rgba(224,59,59,0.12); filter:brightness(0.98); }
        .btnEliminarHeladera:active { transform: translateY(0); }

        .btnCambiarNombre, .btnCambiarColor, .btnEliminarHeladera { margin-top: 0; }

        .nota::before {
            content: "Lista de Compras _______ _______ _______";
        }

