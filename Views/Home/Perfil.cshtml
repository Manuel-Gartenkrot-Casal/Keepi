@using Keepi.Models
@using System.Text.Json

@{
    string json = ViewBag.UsuarioJson; 
    string nombre = "";
    string apellido = "";
    string username = "";
    string email = "";


    if (!string.IsNullOrEmpty(json))
    {
        Usuario u = JsonSerializer.Deserialize<Usuario>(json);
        nombre = u.Nombre;
        apellido = u.Apellido;
        username = u.Username;
         email = u.Email;


    }
}

<div class ="Perfil">
<a href="@Url.Action("cerrarSesion", "Auth")" >Cerrar Sesion</a>
</div>
