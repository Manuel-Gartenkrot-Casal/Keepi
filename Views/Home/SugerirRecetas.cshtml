@model List<Receta>
@{
    ViewData["Title"] = "Recetas Sugeridas";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <p>Estas son las recetas que puedes preparar con los ingredientes que tienes en tu heladera.</p>
    <hr />

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-warning">@ViewBag.Error</div>
    }
    else if (Model != null && Model.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Duración (min)</th>
                    <th>Raciones</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var receta in Model)
                {
                    <tr>
                        <td>@receta.nombre</td>
                        <td>@receta.duracion min</td>
                        <td>@receta.Raciones</td>
                        <td>
                            <a href="@Url.Action("Detalles", "Recetas", new { id = receta.ID })" class="btn btn-sm btn-info">Ver Detalles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No se encontraron recetas que puedas hacer con todos tus ingredientes.
        </div>
    }
    
    <div class="mt-3">
        <a href="@Url.Action("Index", "Recetas")" class="btn btn-outline-secondary">Volver al Menú Principal</a>
    </div>
</div>