@{
    ViewData["Title"] = "Menú de Recetas";
    var listaRecetas = ViewBag.ListaRecetas as List<Receta>;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <div>
            <a href="@Url.Action("SugerirRecetas", "Recetas")" class="btn btn-info">
                Sugerir Recetas (con mi heladera)
            </a>
        </div>
    </div>

    @if (listaRecetas != null && listaRecetas.Any())
    {
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Duración (min)</th>
                    <th>Raciones</th>
                    <th>Popularidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var receta in listaRecetas)
                {
                    <tr>
                        <td>@receta.nombre</td>
                        <td>@receta.duracion min</td>
                        <td>@receta.Raciones</td>
                        <td>@receta.Popularidad</td>
                        <td>
                            <a href="@Url.Action("Detalles", "Recetas", new { id = receta.ID })" class="btn btn-sm btn-info">Ver</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No hay recetas cargadas en la base de datos.
        </div>
    }
</div>